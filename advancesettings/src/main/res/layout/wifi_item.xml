<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/wifi_ssid_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WIFI名称:"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/wifi_ssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/wifi_ssid_text"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/wifi_pwd_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wifi_ssid_text"
        android:text="WIFI密码:"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/wifi_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wifi_ssid"
        android:layout_toEndOf="@id/wifi_pwd_text"
        android:textSize="16sp"
        />

</RelativeLayout>